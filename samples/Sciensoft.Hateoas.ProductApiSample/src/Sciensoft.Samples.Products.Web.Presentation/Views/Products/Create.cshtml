@model Product.Create

<div>@ViewData["ErrorMessage"]</div>

<form asp-controller="Products" asp-action="Create" method="post">

    <div class="form-group">
        <div class="col-2">
            <label asp-for="@Model.Code"></label>
            <input asp-for="@Model.Code" value="@Model.Code" class="form-control" />
        </div>
    </div>

    <div class="form-group col-5">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" value="@Model.Name" class="form-control" />
    </div>

    <div class="form-group">
        <div class="col-2">
            <label asp-for="@Model.Price.Value"></label>
            <input asp-for="@Model.Price.Value" type="number" value="@Model.Price.Value" class="form-control" />
        </div>
        <label class="form-check">
            <input type="checkbox" asp-for="@Model.Price.Approved" /> I approve values over <strong>$999</strong>.
        </label>
    </div>

    <div class="col-10">
        <button type="submit" class="btn btn-primary">Create</button>
        <input type="button" onclick="history.back()" class="btn btn-secondary" value="Cancel" />
    </div>
</form>